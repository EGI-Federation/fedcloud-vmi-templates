{
  "builders": [
    {
      "boot_command": [
        "<esc>",
        "linux inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-8.cfg",
        "<enter>"
      ],
      "disk_size": 8000,
      "format": "qcow2",
      "headless": true,
      "http_directory": "httpdir",
      "http_port_max": 8550,
      "http_port_min": 8500,
      "iso_checksum": "sha256:a96b15fdea3842de667b2472ee10842db6bd1ec9a7e76f58541b5b0d59433349",
      "iso_url": "http://ftp.rediris.es/mirror/CentOS/8-stream/isos/x86_64/CentOS-Stream-8-x86_64-latest-boot.iso",
      "shutdown_command": "shutdown -h now",
      "ssh_private_key_file": "packer_key",
      "ssh_timeout": "90m",
      "ssh_username": "root",
      "type": "qemu",
      "memory": 1024,
      "qemuargs": [
    	[ "-cpu", "host" ]
      ],
      "vm_name": "centos.8-2022.10.09",
      "vnc_port_min": 5940,
      "vnc_port_max": 5940
    }
  ],
  "provisioners": [
    {
      "playbook_file": "provisioners/init.yaml",
      "use_proxy": false,
      "type": "ansible",
      "user": "root"
    },
    {
      "expect_disconnect": true,
      "inline": [
        "reboot",
        "sleep 5s"
      ],
      "type": "shell"
    },
    {
      "pause_before": "30s",
      "playbook_file": "provisioners/config.yaml",
      "type": "ansible",
      "use_proxy": false,
      "user": "root"
    }
  ]
}

