{
  "builders": [
    {
      "boot_command": [
        "<esc>",
        " linux inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-8.cfg",
        "<enter>"
      ],
      "disk_size": 8000,
      "format": "ova",
      "guest_os_type": "RedHat_64",
      "http_directory": "httpdir",
      "http_port_max": 8550,
      "http_port_min": 8500,
      "iso_checksum": "sha256:92489962a511ae69d11276ece0156daf4d08b05220444cb3d9a07e6b98490d87",
      "iso_url": "https://ftp.cica.es/CentOS/8-stream/isos/x86_64/CentOS-Stream-8-x86_64-latest-boot.iso",
      "shutdown_command": "shutdown -h now",
      "ssh_password": "rootpassword",
      "ssh_timeout": "90m",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ]
      ],
      "vm_name": "centos.8-2022.04.19"
    }
  ],
  "provisioners": [
    {
      "playbook_file": "provisioners/init.yaml",
      "type": "ansible",
      "user": "root"
    },
    {
      "expect_disconnect": true,
      "inline": [
        "reboot",
        "sleep 5s"
      ],
      "type": "shell"
    },
    {
      "pause_before": "30s",
      "playbook_file": "provisioners/config.yaml",
      "type": "ansible",
      "user": "root"
    }
  ]
}

