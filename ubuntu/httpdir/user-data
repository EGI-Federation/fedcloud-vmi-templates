#cloud-config
autoinstall:
  early-commands:
  - systemctl stop ssh
  version: 1
  locale: en_US
  keyboard:
    layout: us
    variant: ""
  identity:
    hostname: egi
    username: ubuntu
    password: 'x'
  ssh:
    install-server: true
  storage:
    version: 1
    config:
       - id: vda
         type: disk
         ptable: gpt
         path: /dev/vda
         name: main_disk
         grub_device: true
       - id: vdap1
         type: partition
         size: 98%
         device: vda
       - id: vdap2
         type: partition
         size: 1%
         device: vda
         flag: bios_grub
       - id: vdap3
         type: partition
         size: 1%
         device: vda
         flag: boot
       - id: vdaefi
         type: format
         label: efi
         fstype: fat32
         volume: vdap3
       - id: vdaroot
         type: format
         fstype: ext4
         volume: vdap1
         label: rootdisk
       - id: mountroot
         type: mount
         path: /
         device: vdaroot
       - id: mountefi
         type: mount
         path: /boot/efi
         device: vdaefi
  # avoid having the repos changed
  apt:
    preserve_sources_list: true
  late-commands:
    - 'echo "ubuntu ALL=(ALL) NOPASSWD: ALL" >> /target/etc/sudoers.d/99-egi-installation'
    - sed -ie 's/GRUB_CMDLINE_LINUX_DEFAULT=.*autoinstall.*/GRUB_CMDLINE_LINUX_DEFAULT=""/' /target/etc/default/grub
    - curtin in-target --target /target update-grub2
    - |
     umask 0077
     for x in $(cat /proc/cmdline)
     do
       case $x in
         PACKER_AUTHORIZED_KEY=*)
           encoded=$(echo "${x#*=}" | tr '+' ' ')
           PACKER_AUTHORIZED_KEY=$(echo -n "$encoded" | python3 -c "import sys; from urllib.parse import unquote; print(unquote(sys.stdin.read()));")
           ;;
       esac
     done

     mkdir -p /target/home/ubuntu/.ssh
     [ -n "$PACKER_AUTHORIZED_KEY" ] && echo $PACKER_AUTHORIZED_KEY >> /target/home/ubuntu/.ssh/authorized_keys
     chown -R 1000:1000 /target/home/ubuntu
